
config defaults 'default'
	option syn_flood '1'
	option input 'ACCEPT'
	option output 'ACCEPT'
	option forward 'REJECT'

config zone 'lan'
	option name 'lan'
	list network 'lan'
	option input 'ACCEPT'
	option output 'ACCEPT'
	option forward 'ACCEPT'

config zone 'wan'
	option name 'wan'
	list network 'wan'
	list network 'wan6'
	option input 'REJECT'
	option output 'ACCEPT'
	option forward 'REJECT'
	option masq '1'
	option mtu_fix '1'

config forwarding 'lan2wanfwd'
	option src 'lan'
	option dest 'wan'

config rule 'wan_icmp'
	option name 'Allow-Ping'
	option src 'wan'
	option proto 'icmp'
	option icmp_type 'echo-request'
	option family 'ipv4'
	option target 'ACCEPT'
	option enabled '1'

config rule 'wan_ssh'
	option name 'Allow-SSH'
	option src 'wan'
	option dest_port '22'
	option target 'ACCEPT'
	option proto 'tcp'
	option enabled '1'

config rule 'wan_www'
	option name 'Allow-Web'
	option src 'wan'
	option dest_port '80 443'
	option target 'ACCEPT'
	option proto 'tcp'
	option enabled '1'

config rule 'wan_discovery'
	option name 'Allow-Discovery'
	option src 'wan'
	option dest_port '10001'
	option target 'ACCEPT'
	option proto 'all'
	option enabled '1'

config zone 'mgt'
	option name 'mgt'
	option network 'mgt'
	option input 'ACCEPT'
	option output 'ACCEPT'
	option forward 'DROP'
	option enabled '1'

config forwarding 'wan2lanfwd'
	option enabled '0'
	option src 'wan'
	option dest 'lan'

config include 'ubnt'
	option type 'script'
	option path '/etc/firewall.ubnt'
	option family 'any'
	option reload '1'

config include 'miniupnpd'
	option type 'script'
	option path '/usr/share/miniupnpd/firewall.include'
	option family 'any'
	option reload '1'

